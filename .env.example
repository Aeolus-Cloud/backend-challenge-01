# Server Configuration
PORT=3030
HOST=localhost

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC=device-events
KAFKA_RETENTION_MS=3600000

# Device Event Configuration (in milliseconds)
MIN_EVENT_INTERVAL=3000
MAX_EVENT_INTERVAL=10000

# Image Storage Configuration
SAVE_IMAGES=false
TMP_FOLDER=./tmp/images
# Timezone for image timestamps (e.g., UTC, America/New_York, Europe/London, Asia/Tokyo, America/Recife, America/Sao_Paulo, UTC-3, UTC+5)
IMAGE_TIMEZONE=UTC

# Kafka Producer Settings (for large image payloads)
KAFKAJS_NO_PARTITIONER_WARNING=1