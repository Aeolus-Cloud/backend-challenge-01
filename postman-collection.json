{
  "info": {
    "name": "Device Event API",
    "description": "API collection for testing the Device Event Generator with Kafka integration",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3030",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health & Info",
      "item": [
        {
          "name": "API Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/health",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "health"
              ]
            }
          }
        },
        {
          "name": "API Root Info",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                ""
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Device Management",
      "item": [
        {
          "name": "Add Device",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"deviceId\": \"device-001\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/devices",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "devices"
              ]
            }
          }
        },
        {
          "name": "List All Devices",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/devices",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "devices"
              ]
            }
          }
        },
        {
          "name": "Get Device Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/devices/device-001/status",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "devices",
                "device-001",
                "status"
              ]
            }
          }
        },
        {
          "name": "Remove Device",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/devices/device-001",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "devices",
                "device-001"
              ]
            }
          }
        }
      ]
    }
  ]
}
